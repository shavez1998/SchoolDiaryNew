<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shavez.schooldiary.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250px"
        android:layout_height="300px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@mipmap/menu_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginStart="17dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/imageView2"
        android:fontFamily="casual"
        android:text="School"
        android:textAllCaps="false"
        android:textColor="#0000ff"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="casual"
        android:text="Diary"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/termin"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Termine"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/fach"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/termin"
        android:layout_below="@+id/termin"
        android:layout_marginTop="34dp"
        android:text="FÃ¤cher"
        android:textSize="30sp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fach"
        android:layout_below="@+id/fach"
        android:layout_marginTop="34dp"
        android:text="Logout"
        android:textSize="30sp" />







</RelativeLayout>


