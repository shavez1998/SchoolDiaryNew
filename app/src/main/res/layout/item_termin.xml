<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/termin_foto"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:background="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/termin_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/termin_foto"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/termin_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termin_titel"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="85dp"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/termin_menuBox"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/termin_titel"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/menu_dots_foreground" />


</RelativeLayout>